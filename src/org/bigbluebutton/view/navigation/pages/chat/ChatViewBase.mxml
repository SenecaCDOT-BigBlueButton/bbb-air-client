<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:view="org.bigbluebutton.core.view.*" 
				xmlns:chat="org.bigbluebutton.view.navigation.pages.chat.*"				
				>
	<s:Group width="100%" height="100%" styleName="pageStyle">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>
		<s:Scroller width="100%" height="100%"> 
			<s:VGroup height="100%" width="100%" >
				<chat:ChatList id="chatlist" width="100%" height="100%" contentBackgroundColor="white"/>
			</s:VGroup>
		</s:Scroller>
		<s:Group width="100%" height="8%">
			<s:layout>
				<s:HorizontalLayout />
			</s:layout>
			<s:TextInput id="inputMessage0" width="80%" height="100%"/>
			<s:Button id="sendButton0" width="20%" height="100%" label="{resourceManager.getString('resources', 'chat.sendBtn.text')}" enabled="{inputMessage0.text!=''}"/>
		</s:Group>		
	</s:Group>
</view:NoTabView>
