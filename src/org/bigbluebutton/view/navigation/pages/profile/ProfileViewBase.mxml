<?xml version="1.0" encoding="utf-8"?>
<view:NoTabView xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				xmlns:view="org.bigbluebutton.core.view.*" 
				styleName="viewStyle"
				>
	
	<fx:Declarations>
		<s:RadioButtonGroup id="cameraQualityTypeRadioButtonGroup" />
	</fx:Declarations>
	
	<s:Group  width="100%" height="100%" styleName="pageStyle">
		<s:layout>
			<s:VerticalLayout />
		</s:layout>		
		<s:Scroller width="100%" height="100%"> 
			<s:VGroup width="100%" height="100%" horizontalAlign="center">
				<s:VGroup width="80%">
					<s:Label width="100%" color="{getStyle('textColor')}" text="{resourceManager.getString('resources', 'profile.participant')}"/>
					<s:SkinnableContainer width="100%" styleName="containerStyle">
						<s:layout>
							<s:VerticalLayout />
						</s:layout>
						<s:Label id="userName" width="100%" />
						<s:Line width="100%" height="0" >
							<s:stroke>
								<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}" />
							</s:stroke>
						</s:Line>	
						<s:Button id="logoutButton0" width="100%" styleName="logoutButtonStyle" />
					</s:SkinnableContainer> 
				</s:VGroup>	
				
				<s:VGroup width="80%">
					<s:Label width="100%" color="{getStyle('textColor')}"  text="{resourceManager.getString('resources', 'profile.settings')}"/>
					<s:SkinnableContainer width="100%" styleName="containerStyle">
						<s:layout>
							<s:VerticalLayout />
						</s:layout>
						<s:Button id="shareCameraBtn0" width="100%"  styleName="profileSettingsButtonStyle" />		
						<s:Line  height="0" width="100%" >
							<s:stroke>
								<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}"/>
							</s:stroke>
						</s:Line>
						<s:Button id="shareMicBtn0" width="100%" label="{resourceManager.getString('resources', 'profile.settings.mic.off')}" styleName="profileSettingsButtonStyle"/>	
						<s:Line height="0" width="100%" >
							<s:stroke>
								<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}" />
							</s:stroke>
						</s:Line>
						<s:Button id="raiseHandButton0"  width="100%" label="{resourceManager.getString('resources', 'profile.settings.handRaise')}" styleName="profileSettingsButtonStyle" />
						
					</s:SkinnableContainer>
					
					<s:VGroup  id="cameraQualityGroup" width="100%">
						<s:Label width="100%" color="{getStyle('textColor')}"
								 text="{resourceManager.getString('resources', 'profile.settings.cameraQuality.selectquality')}" />
						<s:SkinnableContainer width="100%" styleName="containerStyle" >
							<s:layout>
								<s:VerticalLayout  verticalAlign="middle" />
							</s:layout>
							<s:RadioButton id="lowQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.low') + ' (160x120)'}"
										   groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="low" />	
							<s:Line height="0" width="100%" >
								<s:stroke>
									<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}"/>
								</s:stroke>
							</s:Line>
							<s:RadioButton id="mediumQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.medium') + ' (320x240)'}"
											groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="medium" />
							<s:Line  height="0" width="100%">
								<s:stroke>
									<s:SolidColorStroke color="{getStyle('lineColor')}" weight="{getStyle('weight')}" />
								</s:stroke>
							</s:Line>
							<s:RadioButton id="highQuality" label="{resourceManager.getString('resources', 'profile.settings.cameraQuality.high') + ' (640x480)'}"
											 groupName="cameraQualityTypeRadioButtonGroup" width="100%" value="high" />							
						</s:SkinnableContainer>
					</s:VGroup>					
				</s:VGroup>
			</s:VGroup>	
		</s:Scroller>
	</s:Group>
</view:NoTabView>
